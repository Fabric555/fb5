<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploading image..."
        android:id="@+id/upload_pic_title"
        android:drawableLeft="@drawable/ic_cloud_upload_black_24dp"
        android:drawableStart="@drawable/ic_cloud_upload_black_24dp"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="18sp"/>
    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_pic_progress_bar"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/upload_pic_progress_percentage"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>